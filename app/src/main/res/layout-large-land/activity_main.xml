<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:configChanges="orientation"
    android:screenOrientation="portrait"
    >

    <!--
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
-->

    <include

        layout="@layout/toolbar"

        ></include>


    <!-- komentarAAAA llliuuj -->
    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="?android:actionBarSize"
        android:layout_height="140dp"
        android:layout_below="@+id/chronometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        rv_centered="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:text="Snimaj!"
            android:textSize="55dp"
            android:id="@+id/button"
            android:textColor="@color/White"
            android:background="#FF5722"
            android:backgroundTint="#FF5722"
            android:layout_margin="5dp"

            android:layout_below="@+id/chronometer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />


    </com.andexert.library.RippleView>
    <!-- komentarAAAA llliuuj
    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Snimaj!"
        android:textSize="27dp"
        android:id="@+id/button"
        android:textColor="@color/White"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"

        android:layout_below="@+id/chronometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
-->

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="free space"
        android:id="@+id/textView2"
        android:layout_above="@+id/spaceProgressBar"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/more"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="Trenutne postavke:"
        android:id="@+id/textView25"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:text="Audio Encoding Rate"
        android:id="@+id/textView7"
        android:gravity="center"
        android:layout_above="@+id/more"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:text="Audio Sampling Rate"
        android:gravity="center"
        android:id="@+id/textView8"
        android:layout_above="@+id/more"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:text="Promjena"
        android:textSize="20dp"
        android:id="@+id/buttonHint"
        android:textColor="@color/White"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"


        android:visibility="visible"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignTop="@+id/chronometer"
        android:layout_above="@+id/textView8" />


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spaceProgressBar"
        android:max="100"
        android:progressTint="@color/ColorPrimary"
        android:progress="75"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"

        android:textSize="100dp"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:textSize="22dp"
        android:text="Detalji"
        android:id="@+id/buttonLastSaved"
        android:layout_marginTop="28dp"
        android:textColor="@color/White"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
