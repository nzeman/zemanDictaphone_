<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:configChanges="orientation"
    android:screenOrientation="portrait"
    >


    <include

        layout="@layout/toolbar"

        ></include>





        <Button
            android:layout_width="?android:actionBarSize"
            android:layout_height="80dp"
            android:layout_below="@+id/chronometer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:text="Snimaj!"
            android:textSize="38dp"
            android:id="@+id/button"
            android:textColor="@color/White"
            android:background="#FF5722"
            android:backgroundTint="#FF5722"
            android:layout_margin="5dp"

        />





    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="free space"
        android:id="@+id/textView2"
        android:layout_above="@+id/spaceProgressBar"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textView6"
        android:textSize="10dp"
        android:gravity="center"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="bbb"
        android:id="@+id/textView7"
        android:gravity="center"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="aaa"
        android:gravity="center"
        android:id="@+id/textView8"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:text="Promjena"
        android:textSize="9dp"
        android:id="@+id/buttonHint"
        android:textColor="@color/White"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"


        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />


    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spaceProgressBar"
        android:max="100"
        android:progressTint="@color/ColorPrimary"
        android:progress="75"
        style="?android:attr/progressBarStyleHorizontal"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_marginTop="15dp"
        android:textSize="78dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:textSize="13dp"
        android:text="Detalji"
        android:id="@+id/buttonLastSaved"
        android:layout_marginTop="4dp"
        android:textColor="@color/White"
        android:background="#FF5722"
        android:backgroundTint="#FF5722"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="Trenutne postavke:"
        android:id="@+id/textView25"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" />


</RelativeLayout>
